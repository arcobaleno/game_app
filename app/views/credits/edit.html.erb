<% provide(:title, 'Edit Credit') %>

<h1>Edit Credit <%= @credit.id %></h1>

<div class="row">

	<div class="span6">
		<h3>Current Attribiutes</h3>
	</br>
	</br>
	</br>
	</br>
		<table class="table">
			<tr>
				<th>User ID</th>
				<td><%= @credit.user_id %></td>
			</tr>
			<tr>
				<th>Pool ID</th>
				<td><%= @credit.pool_id %></td>
			</tr>
			<tr>
				<th>Credit Code</th>
				<td><%= @credit.credit_code %></td>
			</tr>
			<tr>
				<th>Value</th>
				<td><%= @credit.value %></td>
			</tr>
		</table>
	</div>
	
	<div class="span6">

		<h3>Make Changes</h3>
	
		<%= form_for(@credit) do |f| %>

		<%= f.label :user_id %>
		<%= f.text_field :user_id %>

		<%= f.label :pool_id %>
		<%= f.text_field :pool_id %>

		<%= f.label :credit_code %>
		<%= f.text_field :credit_code %>

		<%= f.label :value %>
		<%= f.text_field :value %>

		<%= f.submit "Save Changes", class: "btn btn-large btn-primary" %>
		<% end %>
	
	</div>
</div>