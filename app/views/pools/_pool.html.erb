
<div class="pool_partial">

	<div class="pool_partial_first">
		<p id="pool_partial_first_buy_in" class="pool_partial_first_text">
			Buy in: <%= pool.buy_in %>
		</p>
		<p class="pool_partial_first_text">
			Type: <%= pool_type(pool) %>
		</p>
		<p class="pool_partial_first_text">
			Owner: <%= pool_owner(pool.user_id) %>
		</p>
	</div>
	<div class="pool_partial_second">
		<h3 id="spot_count" class="center">
			<%= pool.max_players - pool.players.count %>
		</h3>
		<p class="center">
			Spots Remaining
		</p>
		<p id="pool_button" class="center">
			<%= link_to "Pool #{pool.id}", game_pool_path(@game, pool), class: "btn btn-mini btn-inverse" %>
		</p>
	</div>
</div>

