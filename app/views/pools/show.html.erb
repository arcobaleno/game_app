<h1>Pool <%= @pool.id %></h1>

<div class="row">
	<div class="pool_info_show">
		<h3>Sport: <%= @game.sport %></h3>

		<h3>Game: <%= @game.team_one %> vs. <%= @game.team_two %></h3>

		<h3>Date: <%= @game.event_time %></h3>

		<h3>Pool Type: <%= @pool.pool_type %></h3>

		<h3>Buy In: <%= @pool.buy_in %>

		<h3>Max Players: <%= @pool.max_players %></h3>

		<h3>Status: <%= @pool.status %></h3>

		<h3>Credits in Pool: <%= @pool_credits %></h3>
	</div>
</end>

<div class="row">

	<div class="span6">
		<table class="table table-bordered" id="banter">
			<tr>
				<td>
					<h3>
						BANTR
					</h3>
				</td>
			</tr>
		</table>
	</br>
		<%= render 'shared/new_micropost' %>
		<div id="bantr_feed">
			<table class="table">
			<%= render @microposts %>
			<tr>
			</tr>
			</table>
		</div>
	</div>

	<div class="span6">
		<table class="table table-bordered" id="score">
			<tr>
				<td>
				<h3>
					SCORES
				</h3>
				</td>
			</tr>
		</table>
		<%= render 'shared/new_player' %>
		<div id="score_feed">
		<table class="table table-bordered">
		<%= render @players %>
		</table>
		</div>
	</div>
</div>