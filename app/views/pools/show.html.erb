<h1 class="pool_label">Pool <%= @pool.id %></h1>

<div class="row">
	<div class="span12">
		<div class="pool_show_game_info">
			<h3>Game: <%= @game.team_one %> vs. <%= @game.team_two %></h3>
			<h3>Sport: <%= @game.sport %></h3>
			<h3>Date: <%= @game.event_time %></h3>
		</div>
		<div class="pool_bet_info">
			<h3>Pool Type: <%= @pool.pool_type %></h3>

			<h3>Buy In: <%= @pool.buy_in %>

			<h3>Max Players: <%= @pool.max_players %></h3>

			<h3>Status: <%= @pool.status %></h3>

			<h3>Credits in Pool: <%= @pool_credits %></h3>
		</div>
	</div>
</div>

<div class="row">
	<div class="span6">
		<h3 class="bantr_label">
			BANTR
		</h3>
	
		<%= render 'shared/new_micropost' %>

		<%= render 'shared/micropost_feed' %>
	</div>

	<div class="span6">
		<h3 class="score_label">
			SCORES
		</h3>

		<%= render 'shared/new_player' %>

		<%= render 'shared/player_feed' %>
	</div>
</div>