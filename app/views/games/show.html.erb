<div id="game_show_title" class="backdrop">
	<h1><%= @game.team_one %> vs. <%= @game.team_two %></h1>
</div>

<div id="games_buttons" class="row">
	<div class="back_to_games_button">
		<%= link_to "Back to Games", games_path, class: "btn btn-large btn-primary" %>
	</div>

	<div class="create_new_pool_button">
		<%= link_to "Create New Pool", new_game_pool_path(@game), class: "btn btn-large btn-primary" %>
	</div>
</div>


<div id="pools_index_box" class="backdrop">
	<%= render @game.pools.sort_by &:id  %>
</div>