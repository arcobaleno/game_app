<div id="new_game_page" class="backdrop">
	<h1>Create a New Game</h1>

	<div class="row">
			<div class="span4 offset4">
				<%= form_for(@game) do |f| %>

					<%= f.label :team_one %>
					<%= f.text_field :team_one %>

					<%= f.label :team_two %>
					<%= f.text_field :team_two %>

					<%= f.label :sport, "Type of Sport" %>
					<%= f.select(:sport, options_for_select([
											['Baseball', 'Baseball'],
											['Basketball', 'Basketball'],
											['Football', 'Football'],
											['Soccer', 'Soccer'],
											['Tennis', 'Tennis']
											])) %>
					<div class="time">
							<%= f.label :date_time, "Date and Time of Event" %>
						
							<%= f.datetime_select :date_time, :prompt => {:hour => 'Choose hour', :minute => 'Choose minute'} %>
					</div>
			</div>
	</div>
			<div class="center">
					<%= f.submit "Post New Game", class: "btn btn-large btn-inverse" %>
					<% end %>
			</div>
			</div>
	</div>
</div>