<% provide(:title, full_name(@user)) %>

<div class="row">

	<aside class="span6">
		<div class="user_info">
			<%-# User Profile Picture -%>
			<div class="profile_pic">
				<%= image_tag @user.avatar_url.to_s, :id => 'profile' %>
			</div>
			<%-# User contact Information-%>
			<div class="profile_info">
				<section>
					<h1>
						<%= full_name(@user) %>
					</h1>

					<h4>
						Email: <%= @user.email %>
					</h4>

				    <h4>
						<%= link_to "Update Profile", edit_user_path %>
					</h4>
				    
				</section>
			</div>
		</div>
	</aside>

	<aside class="span6">
		<div class="user_credits">
			<h3 class="credit_info_label">
				Credit Info:
			</h3>
			<div class="pool_credits">
				<h5>
					Credits in Pools:
				</h5>
				<h1 class="pool_credit_count">
					<%= @pool_credits %>
				</h1>
			</div>
			<div class="player_credits">
				<h5>
					Credits in Bank:
				</h5>
				<h1 class="player_credit_count">
					<%= @player_credits %>
				</h1>
			</div>
			<div class="score_count">
				<div class="wins">
					<h3>
						Wins:
					</h3>
				</div>
				<div class="losses">
					<h3>
						Losses:
					</h3>
				</div>
			</div>
		</div>
	</aside>
</div>

<div class="row">
	<aside class="span6">
		<div class="credit_redeem">
			<h3 class="redeem_label">Redeem Code Here</h3>
			<%= form_tag redeem_credits_credit_path, :method => 'put' do %>
			<p>
			<%= text_field_tag :search, params[:search], :class => 'credit_redeem_form' %>
			<%= submit_tag "Redeem", :class => 'redeem_button' %>
			</p>
			<% end %>
		</div>
	</aside>
	<aside class="span6">
		<div class="participating_pools">
			<h3 class="participating_pool_label">Participating Pools</h3>
			<%= render 'shared/pool_feed' %>
		</div>
	</aside
</div>